{
  "name": "@delangle/use-modal",
  "version": "1.3.0",
  "description": "React hook for modal management",
  "private": false,
  "sideEffects": false,
  "main": "./dist/index.cjs.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/typings/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "bili",
    "build:watch": "npm run clean && tsc --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type:coverage": "tscov -d",
    "lint": "eslint \"src/**\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flaviendelangle/use-modal.git"
  },
  "author": "Flavien DELANGLE",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/flaviendelangle/use-modal/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "homepage": "https://github.com/flaviendelangle/use-modal#readme",
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "devDependencies": {
    "@habx/eslint-config-client": "5.5.0",
    "@liftr/tscov": "2.0.0",
    "@testing-library/dom": "7.30.0",
    "@types/jest": "26.0.20",
    "@types/react": "17.0.3",
    "@types/sinon": "9.0.11",
    "bili": "5.0.5",
    "cross-env": "7.0.3",
    "husky": "4.3.8",
    "jest": "26.6.3",
    "lint-staged": "10.5.4",
    "react": "17.0.1",
    "react-hooks-testing-library": "0.6.0",
    "react-test-renderer": "16.14.0",
    "rimraf": "3.0.2",
    "rollup-plugin-typescript2": "0.29.0",
    "sinon": "9.2.4",
    "ts-jest": "26.5.3",
    "typescript": "4.2.3"
  },
  "dependencies": {
    "test-jest": "^1.0.1"
  }
}
