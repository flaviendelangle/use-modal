{
  "name": "@delangle/use-modal",
  "version": "1.9.0",
  "description": "React hook for modal management",
  "private": false,
  "sideEffects": ["./dist/esm/polyfill.js"],
  "main": "./dist/index.cjs.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/typings/index.d.ts",
  "scripts": {
    "clean": "rimraf ./dist",
    "build": "npm run clean && npm run build:esm && npm run build:cjs",
    "build:esm": "tsc",
    "build:cjs": "bili",
    "build:watch": "npm run clean && tsc --watch",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "type:coverage": "tscov -d",
    "lint": "eslint \"src/**\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/flaviendelangle/use-modal.git"
  },
  "author": "Flavien DELANGLE",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/flaviendelangle/use-modal/issues"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "eslint --fix"
    ]
  },
  "homepage": "https://github.com/flaviendelangle/use-modal#readme",
  "peerDependencies": {
    "react": ">=17.0.2"
  },
  "devDependencies": {
    "@habx/eslint-config-client": "^6.2.0",
    "@liftr/tscov": "^2.0.0",
    "@testing-library/dom": "^7.31.2",
    "@types/jest": "^26.0.24",
    "@types/react": "^17.0.21",
    "@types/sinon": "^10.0.2",
    "bili": "^5.0.5",
    "cross-env": "^7.0.3",
    "husky": "^4.3.8",
    "jest": "^26.6.3",
    "lint-staged": "^11.1.2",
    "react": "^17.0.1",
    "react-hooks-testing-library": "^0.6.0",
    "react-test-renderer": "^17.0.1",
    "rimraf": "^3.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "sinon": "^11.1.2",
    "ts-jest": "^26.5.6",
    "typescript": "^4.4.3"
  }
}
