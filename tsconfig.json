{
  "compilerOptions": {
    "outDir": "./dist/esm",
    "declarationDir": "./dist/typings",
    "baseUrl": "typings",
    "target": "ES5",
    "module": "ES2015",
    "moduleResolution": "Node",
    "lib": ["ESNext", "DOM"],
    "typeRoots": ["./node_modules/@types", "./typings"],
    "strict": true,
    "removeComments": false,
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true
  },
  "files": ["./src/index.ts"]
}
